<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/organizer_home_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.OrganizerHomeView">

    <TextView
        android:id="@+id/welcomeMSG"
        android:layout_width="287dp"
        android:layout_height="58dp"
        android:text="Welcome back "
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonTL"
        android:layout_width="145dp"
        android:layout_height="142dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Event Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMSG"
        app:srcCompat="@drawable/common_google_signin_btn_text_dark_normal"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/imageButtonTR"
        android:layout_width="145dp"
        android:layout_height="142dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Event Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonTL"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMSG"
        app:srcCompat="@drawable/common_google_signin_btn_text_dark_normal"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/imageButtonBL"
        android:layout_width="145dp"
        android:layout_height="142dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:contentDescription="Event Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonTL"
        app:srcCompat="@drawable/common_google_signin_btn_text_dark_normal"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/imageButtonBR"
        android:layout_width="145dp"
        android:layout_height="142dp"
        android:layout_marginTop="64dp"
        android:contentDescription="Event Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonBL"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonTR"
        app:srcCompat="@drawable/common_google_signin_btn_text_dark_normal"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/button_create_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Event"
        app:layout_constraintBottom_toTopOf="@+id/button_manage_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonBL" />

    <Button
        android:id="@+id/button_manage_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="Manage Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>